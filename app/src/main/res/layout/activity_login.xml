<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Se connecter"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="151dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="36dp"
        android:text="Votre nom utilisateur/adresse e-mail"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="78dp" />

    <EditText
        android:id="@+id/courrielLoginInput"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2">
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="56dp"
        android:text="Votre mot de passe"
        app:layout_constraintTop_toBottomOf="@+id/courrielLoginInput"
        tools:layout_editor_absoluteX="131dp" />

    <EditText
        android:id="@+id/passwordLoginInput"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3">
    </EditText>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Connexion"
        android:onClick="onConnectButtonClicked"
        app:layout_constraintTop_toBottomOf="@+id/passwordLoginInput"
        tools:layout_editor_absoluteX="141dp" />

    <TextView
        android:id="@+id/registerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:onClick="onRegisterTextClicked"
        android:text="Vous n'avez pas de compte ? S'incrire"
        android:textColor="#0000ff"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:layout_editor_absoluteX="76dp" />
</android.support.constraint.ConstraintLayout>